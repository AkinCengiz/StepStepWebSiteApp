@model List<About>
<div class="section pt-4 px-3 px-lg-4" id="about">
    <div class="container-narrow">
	    <div class="row">
			@foreach (var about in Model)
			{
				<div class="col-md-6">
					<h2 class="h4 my-2">@about.Title</h2>
					<p>@about.Description</p>
					<div class="row mt-3">
						<div class="col-sm-2">
							<div class="pb-1">Yaş :</div>
						</div>
						<div class="col-sm-10">
							<div class="pb-1 fw-bolder">@(DateTime.Now.Year - @about.BirthTime.Year)</div>
						</div>
						<div class="col-sm-2">
							<div class="pb-1">Eposta :</div>
						</div>
						<div class="col-sm-10">
							<div class="pb-1 fw-bolder">@about.Email</div>
						</div>
						<div class="col-sm-2">
							<div class="pb-1">Telefon :</div>
						</div>
						<div class="col-sm-10">
							<div class="pb-1 fw-bolder">@about.Phone</div>
						</div>
						<div class="col-sm-2">
							<div class="pb-1">Adres :</div>
						</div>
						<div class="col-sm-10">
							<div class="pb-1 fw-bolder">@about.Address</div>
						</div>
					</div>
				</div>
				<div class="col-md-5 offset-md-1" data-aos="fade-left" data-aos-delay="100"><img class="avatar img-fluid mt-2" src="@about.ImageUrl" width="400" height="400" alt="Akın CENGİZ"/></div>
			}
		    
	    </div>
    </div>
</div>
