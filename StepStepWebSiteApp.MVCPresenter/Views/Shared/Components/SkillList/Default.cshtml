@model List<Skill>
<div class="section px-3 px-lg-4 pt-5" id="skills">
	<div class="container-narrow">
		<div class="text-center mb-5">
			<h2 class="marker marker-center">Yeteneklerim</h2>
		</div>
		<div class="text-center">
			<p class="mx-auto mb-3" style="max-width:600px">Hızlı öğreniyorum ve Web Uygulaması Geliştirme ve Ürün Tasarımı için gereken çok sayıda beceri konusunda uzmanım</p>
		</div>
		<div class="bg-light p-3">
			<div class="row">
				<div class="col-md-5">
					@for (int i = 0; i < Model.Count/2; i++)
					{
						<div class="py-1">
							<div class="d-flex text-small fw-bolder"><span class="me-auto">@Model[i].Title</span><span>@Model[i].Grade%</span></div>
							<div class="progress my-1">
								<div class="progress-bar bg-primary" role="progressbar" data-aos="zoom-in-right" data-aos-delay="100" data-aos-anchor=".skills-section" style="width: @Model[i].Grade%" aria-valuenow="@Model[i].Grade" aria-valuemin="0" aria-valuemax="100"></div>
							</div>
						</div>
					}
				</div>
				<div class="col-md-5 offset-md-2">
					@for (int i = (int)Math.Ceiling(Model.Count/2.0); i < Model.Count; i++)
					{
						<div class="py-1">
							<div class="d-flex text-small fw-bolder"><span class="me-auto">@Model[i].Title</span><span>@Model[i].Grade%</span></div>
							<div class="progress my-1">
								<div class="progress-bar bg-primary" role="progressbar" data-aos="zoom-in-right" data-aos-delay="100" data-aos-anchor=".skills-section" style="width: @Model[i].Grade%" aria-valuenow="@Model[i].Grade" aria-valuemin="0" aria-valuemax="100"></div>
							</div>
						</div>
					}
				</div>
			</div>
		</div>
	</div>
</div>
