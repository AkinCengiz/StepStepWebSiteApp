@model Message
<div class="col-md-6" data-aos="zoom-in" data-aos-delay="100">
	<div class="bg-light my-2 p-3 pt-2">
		<form method="POST">
			<div class="form-group my-2">
				<label for="name" class="form-label fw-bolder">İsim Soyisim</label>
				<input class="form-control" asp-for="FullName" type="text" id="name" name="FullName" required>
			</div>
			<div class="form-group my-2">
				<label for="email" class="form-label fw-bolder">Eposta</label>
				<input class="form-control" type="email" id="email" asp-for="Email" name="Email" required>
			</div>
			<div class="form-group my-2">
				<label for="Subject" class="form-label fw-bolder">Konu</label>
				<input class="form-control" asp-for="Subject" type="text" id="Subject" name="Subject" required>
			</div>
			<div class="form-group my-2">
				<label for="message" class="form-label fw-bolder">Mesajınız</label>
				<textarea class="form-control" style="resize: none;" id="message" name="Content" rows="4" asp-for="Content" required></textarea>
			</div>
			<button class="btn btn-primary mt-2" type="submit">Gönder</button>
		</form>
	</div>
</div>
